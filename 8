-- 3) Sütunların her birine göre diğer sütunları güncelleyecek 5 adet UPDATE işlemi yapalım.
select * from employee 


UPDATE employee
SET name = 'Anybody'
WHERE id <= 3;

UPDATE employee
SET birthday = null
WHERE id >= 47;

UPDATE employee
SET email = 'null'
WHERE email ilike 'a%';

UPDATE employee
SET birthday = '2022-03-13'
WHERE birthday is null;

-- 4) Sütunların her birine göre ilgili satırı silecek 5 adet DELETE işlemi yapalım.

DELETE FROM employee
WHERE name = 'Patrizio';

DELETE FROM employee
WHERE birthday  is null;

DELETE FROM employee
WHERE id=3 ;

DELETE FROM employee
WHERE email='dbeeson14@nsw.gov.au'; 

DELETE FROM employee
WHERE id=5 ;
