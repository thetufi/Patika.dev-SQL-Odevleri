--1)test veritabanınızda employee isimli sütun bilgileri 
--id(INTEGER), name VARCHAR(50), birthday DATE, email VARCHAR(100) olan bir tablo oluşturalım.

create table employee (
id int primary key,
name varchar(50),
birthday date,
email varchar(100)
);

